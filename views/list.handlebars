<h1>Todo list</h1>
<form action="/new" method="post" id="1">
<input type="text" name="name" placeholder="name"><button type="submit" form="1">Submit</button>
</form>

<div class="todos">
	{{#if resp}}
		{{#each resp}}
			<div class="todo">
				<p>{{name}}</p>
				<a href="/update/{{_id}}" class="safe">Update</a> <a href="/del/{{_id}}" class="danger">Delete</a>
			</div>
		{{/each}}
	{{/if}}
</div>
